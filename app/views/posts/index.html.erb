<div class="min-h-screen bg-gray-100">
  <!-- Color Tests -->
  <button class=".btn-primary">a button</button>
  <div class="space-y-4 p-8">
    <!-- Background Colors -->
    <div class="space-y-2">
      <div class="h-12 w-full bg-red-500">bg-red-500</div>
      <div class="h-12 w-full bg-blue-500">bg-blue-500</div>
      <div class="h-12 w-full bg-green-500">bg-green-500</div>
      <div class="h-12 w-full bg-yellow-500">bg-yellow-500</div>
      <div class="h-12 w-full bg-purple-500">bg-purple-500</div>
    </div>

    <!-- Text Colors -->
    <div class="space-y-2">
      <p class="text-red-600">text-red-600</p>
      <p class="text-blue-600">text-blue-600</p>
      <p class="text-green-600">text-green-600</p>
      <p class="text-yellow-600">text-yellow-600</p>
      <p class="text-purple-600">text-purple-600</p>
    </div>

    <!-- Opacity Tests -->
    <div class="space-y-2">
      <div class="h-12 w-full bg-black bg-opacity-25">bg-opacity-25</div>
      <div class="h-12 w-full bg-black bg-opacity-50">bg-opacity-50</div>
      <div class="h-12 w-full bg-black bg-opacity-75">bg-opacity-75</div>
    </div>

    <!-- Padding & Margin -->
    <div class="space-y-2">
      <div class="bg-gray-300 p-2">p-2</div>
      <div class="bg-gray-300 p-4">p-4</div>
      <div class="bg-gray-300 p-8">p-8</div>
    </div>

    <!-- Border Tests -->
    <div class="space-y-2">
      <div class="border border-blue-500 p-4">border-blue-500</div>
      <div class="border-2 border-red-500 p-4">border-2 border-red-500</div>
      <div class="rounded-lg border border-green-500 p-4">rounded-lg border-green-500</div>
    </div>

    <!-- Shadow Tests -->
    <div class="space-y-2">
      <div class="bg-white p-4 shadow-sm">shadow-sm</div>
      <div class="bg-white p-4 shadow">shadow</div>
      <div class="bg-white p-4 shadow-lg">shadow-lg</div>
    </div>

    <!-- Hover Effects -->
    <div class="space-y-2">
      <button class="rounded bg-blue-500 px-4 py-2 text-white hover:bg-blue-600">
        Hover me (blue)
      </button>
      <button class="rounded bg-red-500 px-4 py-2 text-white hover:bg-red-600">
        Hover me (red)
      </button>
    </div>
  </div>
</div>
